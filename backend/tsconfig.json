{
  "compilerOptions": {
    "outDir": "dist", // Specifies the output directory for the compiled files.
    "target": "ES2021", // Sets the JavaScript version for emitted JavaScript and includes compatible library declarations.
    "module": "ESNext", // Specifies the module code generation method.
    "moduleResolution": "node", // Determines how modules are resolved. 'node' mimics Node.js module resolution.
    "esModuleInterop": true, // Enables interoperability between CommonJS and ES Modules.
    "forceConsistentCasingInFileNames": true, // Ensures that file names are case-sensitive.
    "noImplicitAny": true, // Raises an error on expressions and declarations with an implied 'any' type.
    "strict": true, // Enables strict type-checking options.
    "skipLibCheck": true, // Skips type checking of all declaration files (*.d.ts).
    "declaration": true, // Generates corresponding '.d.ts' files.
    "declarationMap": true, // Generates a map file for each corresponding '.d.ts' file.
    "sourceMap": true // Generates source maps for the emitted JavaScript files.
  },
  "include": [
    "./*.js", // Includes JavaScript files in the root directory.
    "src/**/*.ts", // Includes TypeScript files in the 'src' directory and its subdirectories.
    "server.ts", // Includes a specific TypeScript file 'server.ts'.
    "jest.config.cjs"
  ]
}
